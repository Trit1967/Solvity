# Replit environment configuration
# Minimal settings for free tier deployment

# Application settings
APP_NAME=RAGbot
APP_ENV=production
DEBUG=false

# Server configuration
HOST=0.0.0.0
PORT=8000

# Security (generate new keys in production!)
SECRET_KEY=replit-secret-key-change-in-production
API_KEY_PREFIX=replit_

# Database
DATABASE_PATH=data/ragbot.db

# Limits for free tier
MAX_DOCUMENTS_PER_TENANT=10
MAX_QUERIES_PER_DAY=100
MAX_DOCUMENT_SIZE_MB=5

# Features
ENABLE_OLLAMA=false
ENABLE_ENCRYPTION=false
ENABLE_RATE_LIMITING=true