# RAGbot Environment Configuration
# Copy this file to .env and update with your values

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-change-in-production-minimum-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_PATH=./data/ragbot.db
UPLOAD_DIR=./uploads

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
# For Docker deployment, use: http://ollama:11434

# Stripe Configuration (optional for MVP)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_STARTER=
STRIPE_PRICE_ID_PRO=

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@ragbot.ai

# Application Settings
APP_NAME=RAGbot
APP_URL=http://localhost:8000
ENVIRONMENT=development
# Options: development, staging, production

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_PERIOD=minute

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=.pdf,.txt,.docx,.md,.csv,.xlsx

# Model Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
LLM_MODEL=llama3.2
CHUNK_SIZE=1500
CHUNK_OVERLAP=200
SIMILARITY_THRESHOLD=0.15
TOP_K_RESULTS=5

# Monitoring (optional)
SENTRY_DSN=
LOGFILE_PATH=./logs/ragbot.log

# Cloud Storage (optional - for production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# Redis Cache (optional - for production)
REDIS_URL=redis://localhost:6379/0

# OAuth Providers (optional - Phase 2)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=